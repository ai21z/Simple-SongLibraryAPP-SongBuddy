<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorItem"
        android:padding="12dp"
        >


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <TextView
            android:id="@+id/song_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Title:  "
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@+id/song_name_label"
            android:id="@+id/song_artist_label"
            android:layout_width="wrap_content"
            android:text="Artist:  "
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@+id/song_artist_label"
            android:id="@+id/song_duration_label"
            android:layout_width="wrap_content"
            android:text="Time:  "
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@+id/song_duration_label"
            android:id="@+id/song_totDuration_label"
            android:layout_width="wrap_content"
            android:text="Playlist Time:  "
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@+id/song_totDuration_label"
            android:id="@+id/song_link_label"
            android:layout_width="wrap_content"
            android:text="link:  "
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/songInPlaylist_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/songInPlaylist_name"
                android:id="@+id/songInPlaylist_artist"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/songInPlaylist_artist"
                android:id="@+id/songInPlaylist_song_duration"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/songInPlaylist_song_duration"
                android:id="@+id/songInPlaylist_total_duration"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/songInPlaylist_total_duration"
                android:id="@+id/songInPlaylist_link"
                android:autoLink="all"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/delete_song_from_playlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/pdelete" />

    </LinearLayout>

</androidx.cardview.widget.CardView>